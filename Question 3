#include <stdio.h>
#include <limits.h> // for INT_MAX

// Function to find second minimum value
int findSecondMin(int arr[], int n) {
    int min = INT_MAX;
    int secondMin = INT_MAX;

    for (int i = 0; i < n; i++) {
        if (arr[i] < min) {
            secondMin = min;
            min = arr[i];
        }
        else if (arr[i] > min && arr[i] < secondMin) {
            secondMin = arr[i];
        }
    }

    if (secondMin == INT_MAX)
        return -1;  // means no second minimum
    else
        return secondMin;
}

int main() {
    int n;
    printf("Enter the number of elements: ");
    scanf("%d", &n);

    int arr[n];
    printf("Enter %d elements:\n", n);
    for (int i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }

    int secondMin = findSecondMin(arr, n);

    if (secondMin == -1)
        printf("No second minimum value (all elements are equal).\n");
    else
        printf("The second minimum value in the array is: %d\n", secondMin);

    return 0;
}



//OUTPUT
Enter the number of elements: 6
Enter 6 elements:
4 2 8 1 3 1
The second minimum value in the array is: 2
