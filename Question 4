// LEFT ROTATION

#include <stdio.h>

void leftRotate(int arr[], int n, int d) {
    int temp[d];
    int i;

    // Store first d elements in temp
    for(i = 0; i < d; i++) {
        temp[i] = arr[i];
    }

    // Shift remaining elements left
    for(i = 0; i < n - d; i++) {
        arr[i] = arr[i + d];
    }

    // Copy temp elements back to end
    for(i = 0; i < d; i++) {
        arr[n - d + i] = temp[i];
    }
}

int main() {
    int n, d, i;
    printf("Enter number of elements: ");
    scanf("%d", &n);

    int arr[n];
    printf("Enter %d elements:\n", n);
    for(i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }

    printf("Enter number of rotations: ");
    scanf("%d", &d);

    leftRotate(arr, n, d);

    printf("Array after left rotation: ");
    for(i = 0; i < n; i++) {
        printf("%d ", arr[i]);
    }

    return 0;
}


//OUTPUT
Enter number of elements: 5
Enter 5 elements:
1 2 3 4 5
Enter number of rotations: 2
Array after left rotation: 3 4 5 1 2



//-----------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------


//RIGHT ROTATION

#include <stdio.h>

// Function to right rotate array by d positions
void rightRotate(int arr[], int n, int d) {
    int temp[d];
    int i;

    // Store last d elements in temp
    for(i = 0; i < d; i++) {
        temp[i] = arr[n - d + i];
    }

    // Shift remaining elements right
    for(i = n - 1; i >= d; i--) {
        arr[i] = arr[i - d];
    }

    // Copy temp elements back to beginning
    for(i = 0; i < d; i++) {
        arr[i] = temp[i];
    }
}

int main() {
    int n, d, i;
    printf("Enter number of elements: ");
    scanf("%d", &n);

    int arr[n];
    printf("Enter %d elements:\n", n);
    for(i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }

    printf("Enter number of rotations: ");
    scanf("%d", &d);

    // Handle cases when d > n
    d = d % n;

    rightRotate(arr, n, d);

    printf("Array after right rotation: ");
    for(i = 0; i < n; i++) {
        printf("%d ", arr[i]);
    }

    return 0;
}


//OUTPUT
Enter number of elements: 5
Enter 5 elements:
1 2 3 4 5
Enter number of rotations: 2
Array after right rotation: 4 5 1 2 3
